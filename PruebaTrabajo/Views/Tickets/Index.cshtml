@model IEnumerable<PruebaTrabajo.Models.Ticket>

@{
    ViewBag.Title = "Tickects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tickects</h2>

<p>
    @Html.ActionLink("Crear nuevo Tickect", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HistoriaUsuario.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentarios)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HistoriaUsuario.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentarios)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdTickets }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdTickets }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdTickets })
        </td>
    </tr>
}

</table>
